{
    "name": "ronanchilvers/bundler",
    "description": "Simple file bundler",
    "type": "library",
    "require": {
        "corneltek/getoptionkit": "^2.7",
        "symfony/yaml": "^7.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^11.5"
    },
    "license": "MIT",
    "autoload": {
        "psr-4": {
            "Ronanchilvers\\Bundler\\": "src/"
        }
    },
    "authors": [
        {
            "name": "Ronan Chilvers",
            "email": "ronan@thelittledot.com"
        }
    ],
    "scripts": {
        "test": "vendor/bin/phpunit",
        "test:coverage": "vendor/bin/phpunit --coverage-text --coverage-html build/coverage/html",
        "test:ci": "vendor/bin/phpunit --coverage-clover build/logs/clover.xml --log-junit build/logs/junit.xml",
        "test:dox": "vendor/bin/phpunit --testdox"
    },
    "config": {
      "sort-packages": true
    }
}
